<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyActivity"
    tools:deviceIds="tv"
    android:background="@color/darkBlue"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/azure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                style="@style/companyShowFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【"/>
            <TextView
                style="@style/companyShowFontStyle"
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"/>
            <TextView
                style="@style/companyShowFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="】"/>

            <TextView
                android:id="@+id/company_name"
                style="@style/companyShowFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="沿河雷氏照明有限公司" />
        </LinearLayout>
    </LinearLayout>
    <GridLayout
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:columnCount="2" >
        <TextView
            style="@style/companyShowFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招聘岗位:"/>
        <TextView
            android:id="@+id/tv_job"
            style="@style/companyShowFontStyle"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="导购"/>
        <TextView
            style="@style/companyShowFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招聘人数:"
            />
        <TextView
            android:id="@+id/tv_numberOfPeople"
            style="@style/companyShowFontStyle"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="50"
            />
        <TextView
            style="@style/companyShowFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="薪资待遇:"/>
        <TextView
            android:id="@+id/tv_treatment"
            style="@style/companyShowFontStyle"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8000-10000元"/>
        <TextView
            style="@style/companyShowFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作地点:"/>
        <TextView
            android:id="@+id/tv_workAddr"
            style="@style/companyShowFontStyle"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="贵阳"/>
        <TextView
            style="@style/companyShowFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作时间:"/>
        <TextView
            android:id="@+id/tv_workHours"
            style="@style/companyShowFontStyle"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="周一至周五9:00-17:00"/>
        <TextView
            style="@style/companyShowFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岗位要求:"
            />
        <TextView
            android:id="@+id/tv_claim"
            style="@style/companyShowFontStyle"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="年龄20-30岁|大专以上|全职|有导购经验者优先"
            />
    </GridLayout>
</LinearLayout>

